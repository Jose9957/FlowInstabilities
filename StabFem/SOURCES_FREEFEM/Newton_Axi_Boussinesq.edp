ENDIFMACRO	

/* Definition of macros for variational formulations */ 

/* Jacobian of the system of coordinates */

IFMACRO(!JJJ)
macro JJJ() y //EOM
ENDIFMACRO

/* Differential forms */

macro div(u) (dx(u#x)+dy(u#r)+u#r/y)// EOM 
macro ugradf(u,f) ((u#x*dx(f)+u#r*dy(f))) // EOM
macro gradgrad(u,v)(dx(u)*dx(v)+dy(u)*dy(v)) // EOM
macro Grad(u) [[dx(u#x), dy(u#x),  u#x-u#x ], [dx(u#r), dy(u#r), u#x-u#x],[u#x-u#x,u#x-u#x,u#r/y ]] // EOM
macro D(u) [[dx(u#x), .5*(dx(u#r)+dy(u#x)),  u#x-u#x ], [.5*(dx(u#r)+dy(u#x)), dy(u#r),u#x-u#x],[u#x-u#x,u#x-u#x,u#r/y ]] // EOM
macro Conv(ua,ub,v) ( 
((ua#x*dx(ub#x)+ua#r*dy(ub#x))+(ub#x*dx(ua#x)+ub#r*dy(ua#x)))*v#x 
+ ((ua#x*dx(ub#r)+ua#r*dy(ub#r))+(ub#x*dx(ua#r)+ub#r*dy(ua#r)))*v#r 
) // EOM

/* Navier Stokes Fourier equations -- Linear forms */

/* Residual of the Navier--Stokes equations */
/* It is assumed the flow is incoming from the left to the right and gravity from the right to the left */
/* When the Richardson number is positive the sign of the incoming velocity and the gravity are opposed whenever the 
   axisymmetric body is hotter than the ambient temperature */
IFMACRO(!ResidualNS)
macro ResidualEquationNS(u,v)  ( JJJ*(-2*nu*(D(u):D(v)) + div(v)*u#p -.5*Conv(u,u,v) + Ri*u#T*v#x 
+ v#p*div(u)
+ v#T*ugradf(u,u#T) + (1.0/(Re*Pr))*gradgrad(u#T,v#T) ) ) // EOM
ENDIFMACRO

/* End of Navier Stokes Fourier equations */

/* Navier Stokes Fourier derivative (jacobian) -- bilinear forms */

IFMACRO(!OperatorLNS)
macro OperatorLNS(U,u,v) ( JJJ*(-2*nu*(D(u):D(v)) + div(v)*u#p - Conv(U,u,v) + Ri*u#T*v#x 
+ v#p*div(u)
+ v#T*ugradf(U,u#T) + v#T*ugradf(u,U#T) + (1.0/(Re*Pr))*gradgrad(u#T,v#T) ) ) // EOM
ENDIFMACRO

/* End of Navier Stokes Fourier (jacobian) -- bilinear forms */

/* Boundary conditions -- generic */ 

IFMACRO(!BoundaryconditionsBaseFlow)
macro BoundaryconditionsBaseFlow(u,U,v)
	           on(1,u#x=Uin(x,y)-U#x,u#r=Vin(x,y)-U#r,u#T=0.0-U#T)
             + on(2,21,22,23,u#x=0.0-U#x,u#r=0.0-U#r,u#T=1.0-U#T)
      		 + on(6,u#r=0.0-U#r) 
//EOM
ENDIFMACRO


/* End of Boundary conditions -- generic */ 

macro LiftExchange(nu,u,symm)
{
	LiftLoc = LiftCompute(th,nu,u,symm);
	mpiAllReduce(LiftLoc, LiftGlob, mpiCommWorld, mpiSUM);
} // EOM

macro DragExchange(nu,u,symm)
{
	DragLoc = DragCompute(th,nu,u,symm);
	mpiAllReduce(DragLoc, DragGlob, mpiCommWorld, mpiSUM);
} // EOM

macro Lift(nu,u,symm) LiftGlob // EOM
macro Drag(nu,u,symm) DragGlob // EOM


