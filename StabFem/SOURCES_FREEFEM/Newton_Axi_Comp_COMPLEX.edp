macro def(u,p,T,rho)[u#x,u#y,p,T,rho]//EOF


  
XXxxxH<complex> def(du,dp,dT,drho);
XXxxxH<complex> def(Ub,Pb,Tb,Rhob);
XXxxxH<complex> def(Urif,Prif,Trif,Rhorif)=[0.0,0.0,1.0,1.0,1.0];

{
